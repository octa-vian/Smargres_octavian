<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <android.support.design.card.MaterialCardView
                android:id="@+id/layout_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginTop="@dimen/half_big_profile_size"
                android:layout_marginEnd="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dp15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/half_big_profile_size"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp5"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Nama"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingBottom="@dimen/dp5"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp5"
                        android:paddingEnd="@dimen/dp10"
                        android:textColor="@color/light_gray"
                        android:text="Alamat"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingBottom="@dimen/dp5"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp5"
                        android:paddingEnd="@dimen/dp10"
                        android:textColor="@color/light_gray"
                        android:text="No. Telepon"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_telepon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingBottom="@dimen/dp5"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.design.card.MaterialCardView>

            <com.leonardus.irfan.TopCropCircularImageView
                android:id="@+id/topCropCircularImageView"
                android:layout_width="@dimen/big_profile_size"
                android:layout_height="@dimen/big_profile_size"
                android:layout_margin="@dimen/dp5"
                android:elevation="@dimen/dp10"
                android:src="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.leonardus.irfan.TopCropCircularImageView
                android:id="@+id/img_akun"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp5"
                android:elevation="@dimen/dp10"
                android:src="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/topCropCircularImageView"
                app:layout_constraintEnd_toEndOf="@+id/topCropCircularImageView"
                app:layout_constraintStart_toStartOf="@+id/topCropCircularImageView"
                app:layout_constraintTop_toTopOf="@+id/topCropCircularImageView" />

        </android.support.constraint.ConstraintLayout>

        <android.support.design.card.MaterialCardView
            android:id="@+id/layout_kupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="@dimen/dp15"
            app:cardCornerRadius="@dimen/dp15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profil_button_height">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/medium_image_size"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:padding="@dimen/dp10"
                    android:src="@drawable/icon_ekupon"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="E-Kupon"
                    android:padding="@dimen/dp15"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp14"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:id="@+id/layout_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp15"
            app:cardCornerRadius="@dimen/dp15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profil_button_height">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/medium_image_size"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:padding="@dimen/dp10"
                    android:src="@drawable/icon_voucher"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="Voucher"
                    android:padding="@dimen/dp15"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp14"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_margin="@dimen/dp15"
            app:cardCornerRadius="@dimen/dp15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profil_button_height">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/medium_image_size"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:padding="@dimen/dp10"
                    android:src="@drawable/tickets" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="Merchant History"
                    android:padding="@dimen/dp15"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp14"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/profil_button_height"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp15"
            app:cardCornerRadius="@dimen/dp15">

            <TextView
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp20"
                android:textColor="@color/colorPrimaryDark"
                android:text="Log Out"
                android:textStyle="bold"
                android:textSize="@dimen/sp18"/>
        </android.support.design.card.MaterialCardView>

    </LinearLayout>
</ScrollView>